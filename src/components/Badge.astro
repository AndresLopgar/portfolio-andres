---
// Define the props for the Badge component
interface Props {
  bgColor: string;
}

const { bgColor } = Astro.props as Props;
---

<span class={`bg-purple-100 text-purple-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300 ${bgColor}`} style="box-shadow: 0 0 10px rgba(255, 255, 255, 0.4);">
  <slot />
</span>
